{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@/assets": ["./src/assets/*"],
            "@/pages": ["./src/assets/*"],
            "@/styles": ["./src/assets/*"],
            "@/components": ["./src/assets/*"],
        }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}